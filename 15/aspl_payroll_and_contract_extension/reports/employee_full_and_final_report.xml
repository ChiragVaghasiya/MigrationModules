<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="custom_header_original">
        <t t-set="o" t-value="o.with_context(lang=lang)"/>

        <div class="header">

            <style type="text/css">
                @font-face {
                font-family: 'Poppins';
                src: url(data:application/font-woff2;charset=utf-8;base64,..........)
                font-weight: bold;
                font-style: normal;
                }

            </style>

            <div class="row" style="width:101%">
                <div class="col-4"/>
                <div class="col-3"/>
                <div class="col-5"
                     style="height: 15px; margin-top:0px; background:url('/aspl_payroll_and_contract_extension/static/src/img/gradient-half.png')"/>
            </div>

            <div class="row">
                <div class="col-5" style="margin-top: 10px;">
                    <img alt="img"
                         src="/aspl_payroll_and_contract_extension/static/src/img/aspire-logo.png"
                         style="max-height: 80px"/>
                </div>
                <div class="col-3"/>
                <div class="col-4" style="font-size: 16px;margin-top: 10px;">
                    <div style="margin-left: 30px;">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                             style="height: 15px; width: 15px;">
                            <path fill="#F15D3F"
                                  d="M164.9 24.6c-7.7-18.6-28-28.5-47.4-23.2l-88 24C12.1 30.2 0 46 0 64C0 311.4 200.6 512 448 512c18 0 33.8-12.1 38.6-29.5l24-88c5.3-19.4-4.6-39.7-23.2-47.4l-96-40c-16.3-6.8-35.2-2.1-46.3 11.6L304.7 368C234.3 334.7 177.3 277.7 144 207.3L193.3 167c13.7-11.2 18.4-30 11.6-46.3l-40-96z"/>
                        </svg>
                        <span class="pl-2">
                            <t t-esc="o.company_id.phone"/>
                        </span>
                    </div>
                    <div style="margin-left: 30px;">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                             style="height: 15px; width: 15px;">
                            <path fill="#F15D3F"
                                  d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"/>
                        </svg>
                        <span class="pl-2">
                            <t t-esc="o.company_id.email"/>
                        </span>
                    </div>
                    <div style="margin-left: 30px;">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
                             style="height: 15px; width: 15px;">
                            <path fill="#F15D3F"
                                  d="M57.7 193l9.4 16.4c8.3 14.5 21.9 25.2 38 29.8L163 255.7c17.2 4.9 29 20.6 29 38.5v39.9c0 11 6.2 21 16 25.9s16 14.9 16 25.9v39c0 15.6 14.9 26.9 29.9 22.6c16.1-4.6 28.6-17.5 32.7-33.8l2.8-11.2c4.2-16.9 15.2-31.4 30.3-40l8.1-4.6c15-8.5 24.2-24.5 24.2-41.7v-8.3c0-12.7-5.1-24.9-14.1-33.9l-3.9-3.9c-9-9-21.2-14.1-33.9-14.1H257c-11.1 0-22.1-2.9-31.8-8.4l-34.5-19.7c-4.3-2.5-7.6-6.5-9.2-11.2c-3.2-9.6 1.1-20 10.2-24.5l5.9-3c6.6-3.3 14.3-3.9 21.3-1.5l23.2 7.7c8.2 2.7 17.2-.4 21.9-7.5c4.7-7 4.2-16.3-1.2-22.8l-13.6-16.3c-10-12-9.9-29.5 .3-41.3l15.7-18.3c8.8-10.3 10.2-25 3.5-36.7l-2.4-4.2c-3.5-.2-6.9-.3-10.4-.3C163.1 48 84.4 108.9 57.7 193zM464 256c0-36.8-9.6-71.4-26.4-101.5L412 164.8c-15.7 6.3-23.8 23.8-18.5 39.8l16.9 50.7c3.5 10.4 12 18.3 22.6 20.9l29.1 7.3c1.2-9 1.8-18.2 1.8-27.5zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256z"/>
                        </svg>
                        <span class="pl-2">www.aspiresoftserv.com</span>
                    </div>
                </div>
            </div>

            <div class="row" style="width: 98%;">
                <div class="col-12"
                     style="height: 1px;margin-left: 22px;margin-top:15px;background-image:url('/aspl_payroll_and_contract_extension/static/src/img/gradient-full.png')"/>
            </div>


        </div>
    </template>

    <template id="custom_footer_pdf">
        <div class="footer o_standard_footer container">
            <div class="row">
                <div class="col-12"
                     style="background-image:url('/aspl_payroll_and_contract_extension/static/src/img/gradient-full.png'); color: white;height:45px">
                    <div style="padding-top: 11px;text-align:center"><t t-esc="o.company_id.street"/>,<t
                            t-esc="o.company_id.street2"/>,<t t-esc="o.company_id.city"/>,<t
                            t-esc="o.company_id.state_id.name"/>,
                        <t t-esc="o.company_id.zip"/>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="custom_employee_full_and_final">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">

                    <div class="page" style="margin:5px;">
                        <t style="page-break-before:always;"/>

                        <style type="text/css">
                            td, th {
                            min-height: 44px;
                            padding: 10px;
                            }
                        </style>

                        <h2 class="font-weight-bold"
                            style="text-align: center;margin-bottom: 15px; padding: 15px;">
                            FINAL SETTLEMENT
                        </h2>

                        <t t-set="payslip_obj" t-value="o._payslip_obj()"/>
                        <t t-if="payslip_obj">
                            <t t-foreach="payslip_obj.worked_days_line_ids" t-as="lines">
                                <t t-if="lines.code == 'WORK100'">
                                    <t t-set="actual_worked_days" t-value="lines.number_of_days"/>
                                </t>
                                <t t-elif="lines.code == 'LOP'">
                                    <t t-set="total_lop" t-value="lines.number_of_days"/>
                                </t>
                            </t>
                            <t t-set="worked_days" t-value="actual_worked_days - total_lop"/>
                        </t>

                        <div class="row" style="margin: 0 0 12px 0;">

                            <table class="w-100">
                                <tbody>
                                    <tr>
                                        <td style="min-width: 150px;">Name</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.employee_id.name"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Department</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.employee_id.department_id.name"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Designation</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.employee_id.job_title"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Location</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.employee_id.company_id.city"></td>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Date of Joining</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.employee_id.join_date.strftime('%d-%m-%Y')"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Submission date of resignation</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.resign_date.strftime('%d-%m-%Y')"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Last date of working</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.last_date.strftime('%d-%m-%Y')"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Last salary paid</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <t t-if="payslip_obj">
                                            <td t-esc="payslip_obj.date_from.strftime('%b %Y')"/>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Notice period as per application letter</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td t-esc="o.employee_id.resigned_notice_period"/>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Notice period adjustable</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td>0</td>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">PL days payable</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <td>0</td>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Number of days salary payable</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <t t-if="payslip_obj">
                                            <td t-esc="worked_days"/>
                                        </t>
                                        <t t-else="">
                                            <td>0</td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td style="min-width: 150px;">Number of days in the month</td>
                                        <td style="width:40px;text-align:center">:</td>
                                        <t t-if="payslip_obj">
                                            <td t-esc="actual_worked_days"/>
                                        </t>
                                        <t t-else="">
                                            <td>0</td>
                                        </t>
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                        <div style="display:flex;">
                            <div style="border:1px solid #B6B6B6;width:50%;">
                                <table class="table table-borderless" style="width:100%;margin-bottom: 0;">
                                    <thead>
                                        <div style="background-color: #B6B6B6;text-align: center;font-weight: bold;padding: 7px 0;">
                                            Income
                                        </div>
                                    </thead>
                                    <tbody>
                                        <t t-if="payslip_obj">
                                            <tr t-foreach="payslip_obj.line_ids" t-as="li">
                                                <t t-if="li.salary_rule_id.taxable and li.salary_rule_id.appears_on_payslip and li.category_id.code != 'GROSS' and li.category_id.code != 'NET' and li.total != 0">
                                                    <td t-esc="li.name"/>
                                                    <td style="text-align: end;" t-esc="li.total"/>
                                                </t>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div style="border:1px solid #B6B6B6;width:50%;">
                                <table class="table table-borderless" style="width:100%;margin-bottom: 0;">
                                    <thead>
                                        <div style="background-color: #B6B6B6;text-align: center;font-weight: bold;padding: 7px 0;">
                                            Deduction
                                        </div>
                                    </thead>
                                    <tbody>
                                        <t t-if="payslip_obj">
                                            <tr t-foreach="payslip_obj.line_ids" t-as="li">
                                                <!--Note: If you want to add any other category name in deduction then you just need to add 'and' operator and add it in t-if condition-->
                                                <t t-if="li.salary_rule_id.is_deduction and li.salary_rule_id.appears_on_payslip and li.total != 0 and li.code != 'TOTAL_DED'">
                                                    <td t-esc="li.name"/>
                                                    <td style="text-align: end;" t-esc="li.total"/>
                                                </t>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div style="display:flex;margin-bottom: 25px;">
                            <div style="border:1px solid #B6B6B6;width:50%;">
                                <table class="table table-borderless" style="width:100%;margin-bottom: 0;">
                                    <tbody>
                                        <tr>
                                            <td style="font-weight: bold;">Total Income :</td>
                                            <t t-if="payslip_obj">
                                                <t t-foreach="payslip_obj.line_ids" t-as="li">
                                                    <t t-if="li.code == 'GROSS'">
                                                        <td style="text-align: end;" t-esc="li.total"/>
                                                    </t>
                                                </t>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div style="border:1px solid #B6B6B6;width:50%;">
                                <table class="table table-borderless" style="width:100%;margin-bottom: 0;">
                                    <tbody>
                                        <tr>
                                            <td style="font-weight: bold;">Total Deductions :</td>
                                            <t t-if="payslip_obj">
                                                <t t-foreach="payslip_obj.line_ids" t-as="li">
                                                    <t t-if="li.code == 'TOTAL_DED'">
                                                        <td style="text-align: end;" t-esc="li.total"/>
                                                    </t>
                                                </t>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <t t-if="payslip_obj">
                            <t t-foreach="payslip_obj.line_ids" t-as="li">
                                <t t-if="li.code == 'NET'">
                                    <t t-set="net_pay" t-value="li.total"/>
                                </t>
                            </t>
                        </t>
                        <div style="display:flex;">
                            <div style="width:30%;">
                                <table class="table table-borderless">
                                    <thead>
                                        <div style="text-align: center;font-weight: bold;padding: 25px 0;">
                                            Net Pay : INR
                                            <t t-if="payslip_obj">
                                                <t t-esc="net_pay"/>
                                            </t>
                                            <t t-else="">0
                                            </t>
                                        </div>
                                    </thead>
                                    <tbody>
                                        <div>
                                            <div style="text-align: left;margin: 33px 0 16px 0;">
                                                CHECKED BY
                                            </div>
                                            <div style="text-align: left;">
                                                Remarks :
                                            </div>
                                        </div>
                                    </tbody>
                                </table>
                            </div>
                            <div style="width:40%;">
                                <table class="table table-borderless">
                                    <thead>
                                        <div style="text-align: center;font-weight: bold;padding: 25px 0;">
                                            <t t-if="payslip_obj">
                                                <t t-set="in_words"
                                                   t-value="o._number_to_words(net_pay)"/>
                                                <t t-esc="in_words"/>
                                            </t>
                                            <t t-else="">(Rupees ZERO Only)
                                            </t>
                                        </div>
                                    </thead>
                                    <tbody>
                                        <div>
                                            <div style="text-align: center;margin: 33px 0 16px 0;">
                                                AUTHORIZED BY
                                            </div>
                                        </div>
                                    </tbody>
                                </table>
                            </div>
                            <div style="width:30%;">
                                <table class="table table-borderless">
                                    <thead>
                                        <div style="text-align: right;font-weight: bold;padding: 35px 0;">
                                        </div>
                                    </thead>
                                    <tbody>
                                        <div>
                                            <div style="text-align: right;margin: 33px 0 16px 0;">
                                                RECEIVED AND SIGNED
                                            </div>
                                        </div>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
        <t t-call="aspl_payroll_and_contract_extension.custom_footer_pdf"/>
    </template>


    <template id="report_full_and_final">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="aspl_payroll_and_contract_extension.custom_header_original"/>
                <t t-call="aspl_payroll_and_contract_extension.custom_employee_full_and_final"/>
            </t>
        </t>
    </template>

</odoo>