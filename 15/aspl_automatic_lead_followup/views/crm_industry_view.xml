<?xml version="1.0"?>
<odoo>

    <record id="crm_industry_form" model="ir.ui.view">
        <field name="name">crm.industry.form</field>
        <field name="model">crm.industry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="industry_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_industry_tree" model="ir.ui.view">
        <field name="name">crm.industry.tree</field>
        <field name="model">crm.industry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="industry_name"/>
            </tree>
        </field>
    </record>

    <record id="crm_industry" model="ir.actions.act_window">
        <field name="name">Crm Industry</field>
        <field name="res_model">crm.industry</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"/>
    </record>

    <menuitem
            id="crm_menu_config_industry"
            name="Crm Industry"
            parent="crm.crm_menu_config"
            action="crm_industry"
            sequence="4"/>
</odoo>